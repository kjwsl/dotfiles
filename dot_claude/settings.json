{
  "env": {
    "MAX_THINKING_TOKENS": "8000",
    "ENABLE_TOOL_SEARCH": "auto:5",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "60",
    "CLAUDE_CODE_SUBAGENT_MODEL": "haiku"
  },
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(ls *)",
      "Bash(cd *)",
      "Bash(pwd)",
      "Read(**/*.{c,h,cpp,hpp,rs,py,js,ts,json,toml,yaml,yml,md,txt})",
      "Grep(**)",
      "Glob(**)"
    ],
    "deny": [
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(rm -rf *)",
      "Read(.env)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Read(**/*.key)"
    ],
    "mode": "prompt",
    "prompt": [
      "Bash(make *)",
      "Bash(cargo *)",
      "Bash(gcc *)",
      "Bash(arm-*)",
      "Bash(npm *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Read(**/build/**)",
      "Read(**/target/**)",
      "Read(**/*.log)",
      "Read(**/*.bin)",
      "Read(**/*.hex)",
      "Read(**/*.elf)"
    ]
  },
  "model": "haiku",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/filter-verbose.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": false
}

{
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    },
    "enablePermanentToolApproval": true,
    "folderTrust": {
      "enabled": true,
      "trustedDirectories": [
        "{{ .chezmoi.homeDir }}/obsidian-vault",
        "{{ .chezmoi.homeDir }}/projects" 
      ]
    }
    "enableEnvVarRedaction": true
  },
  "general": {
    "previewFeatures": true,
    "useAlternateScreenBuffer": true
  },
  "ui": {
    "showStatusInTitle": true,
    "showCitations": true,
    "showModelInfoInChat": true
  },
  "context": {
    "loadMemoryFromIncludeDirectories": true,
    "includeDirectories": [
      "{{ .chezmoi.homeDir }}/.gemini",
      "{{ .chezmoi.homeDir }}/obsidian-vault"
    ]
  },
  "tools": {
    "shell": {
      "showColor": true
    },
    "autoAccept": true
  }
}
